<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/intro_image"
        >

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="An Android Travel App"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/simpleButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Travel place in Bangladesh"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:padding="15dp"
        android:textStyle="bold|italic"
        android:background="#ffff"
        android:textColor="@color/black"
        >

    </Button>

    <Button
        android:id="@+id/simpleButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:text="Tourist Attraction"
        android:textSize="20sp"
        android:padding="15dp"
        android:background="#ffff"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        ></Button>

    <Button
        android:id="@+id/simpleButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:text="Foreign Travel"
        android:textSize="20sp"
        android:padding="15dp"
        android:textStyle="bold|italic"
        android:background="#ffff"
        android:textColor="@color/black" >

    </Button>

</LinearLayout>