<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Chittagong">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patenga Sea Beach"
        ></TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/patenga"
        >

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patenga Sea Beach is located in Chittagong. Besides this nature attraction, there are seventeen more nature attractions listed in Chittagong. There's also sixteen attractions listed in this district in other categories. "
        >

    </TextView>




</LinearLayout>